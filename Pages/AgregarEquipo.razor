@page "/agregar-equipo"
@inject EquipoService EquipoService
@inject NavigationManager NavigationManager

<PageTitle>Agregar Equipo</PageTitle>

<h1>Agregar Equipo</h1>

<EditForm Model="@nuevoEquipo" OnValidSubmit="AgregarEquipoNuevo">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="form-group">
        <label for="nombre">Nombre</label>
        <InputText id="nombre" class="form-control" @bind-Value="nuevoEquipo.eq_Nombre" />
    </div>
    <div class="form-group">
        <label for="precio">Precio</label>
        <InputNumber id="precio" class="form-control" @bind-Value="nuevoEquipo.eq_Precio" />
    </div>
    <button type="submit" class="btn btn-primary">Agregar</button>
</EditForm>
